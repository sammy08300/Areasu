{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "rootDir": "./assets/js",
    "outDir": "./public/assets/js",
    "sourceMap": true,
    "allowJs": false, // Crucial: ensure we are creating valid TS
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "assets/js/core/**/*.ts",  // Assumes core files are already .ts
    "assets/js/utils/**/*.ts", // For the newly renamed utils files
    "assets/js/components/area/**/*.ts",
    "assets/js/components/tablet/**/*.ts",
    "assets/js/components/ui/**/*.ts",
    "assets/js/init/**/*.ts",
    "assets/js/tests/**/*.ts",
    "assets/js/ui/*.ts",
    "assets/js/*.ts"
  ],
  "exclude": [
    "node_modules", "./public", "./compiled_ts",
    "build.js", "service-worker.js", "assets/js/utils/README.md"
  ]
}
