{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "rootDir": ".", // Changed to root of the project
    "outDir": "./public", // Changed to public
    "sourceMap": true,
    "allowJs": true, // Kept for now, but consider setting to false later
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true, // Added
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "baseUrl": ".", // Optional: helps with path aliases if you use them
    "paths": { // Optional: example for path aliases
      "@/*": ["assets/js/*"]
    }
  },
  "ts-node": { // Added for ts-node ESM support
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  // build.ts and verify-build.ts are compiled separately now
  "include": [
    "assets/js/**/*.ts",
    "assets/locales/**/*.ts",
    // "build.ts", // Removed
    "service-worker.ts"
    // "verify-build.ts" // Removed
    // No need for more specific paths like "assets/js/ui/*.ts" if "assets/js/**/*.ts" is used.
  ],
  "exclude": [
    "node_modules",
    "./public", // Exclude the output directory
    "./compiled_ts",
    "assets/js/utils/README.md"
    // Removed build.js, service-worker.js from exclude
  ]
}
