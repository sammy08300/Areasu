{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "rootDir": ".", // Changed to root of the project
    "outDir": "./public", // Changed to public
    "sourceMap": true,
    "allowJs": true, // Kept for now, but consider setting to false later
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true, // Added
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "baseUrl": ".", // Optional: helps with path aliases if you use them
    "paths": { // Optional: example for path aliases
      "@/*": ["src/js/*"],
      "@locales/*": ["src/locales/*"],
      "@components/*": ["src/js/components/*"],
      "@core/*": ["src/js/core/*"],
      "@utils/*": ["src/js/utils/*"],
      "@init/*": ["src/js/init/*"],
      "@ui/*": ["src/js/ui/*"],
      "@tests/*": ["src/js/tests/*"]
    }
  },
  "ts-node": { // Added for ts-node ESM support
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  // build.ts and verify-build.ts are compiled separately now
  "include": [
    "src/js/**/*.ts",
    "src/locales/**/*.ts",
    "src/service-worker.ts"
    // No need for more specific paths like "src/js/ui/*.ts" if "src/js/**/*.ts" is used.
  ],
  "exclude": [
    "node_modules",
    "./public", // Exclude the output directory
    "./compiled_ts",
    "src/js/utils/README.md" // Assuming README.md was also moved
    // Removed build.js, service-worker.js from exclude
  ]
}
